#!/bin/bash

TUBI_TARGET_NAME=$1

if [[ -z "$TUBI_TARGET_NAME" ]]; then
    ./pants filter --target-type=deploy_jar ::
else
    ./pants filter --target-type=deploy_jar --address-regex=".*:${TUBI_TARGET_NAME}$" :: | wc -l | grep "^1$" && \
    ./pants filter --target-type=deploy_jar --address-regex=".*:${TUBI_TARGET_NAME}$" :: | xargs -I% ./pants run %
fi
